@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-4">
        <div class="form-group">
            <label class="form-label">Enter Your Name</label><br/>
            <input type="text" class="form-control" id="userInput" placeholder="Your Name" />
        </div>
        <div class="form-group">
            <label class="form-label">Enter Your Message</label><br/>
            <textarea rows="4" type="text" class="form-control" id="messageInput" placeholder="Message"></textarea>
       </div>
        <div class="mt-3 text-center">
            <button id="sendButton" class="btn btn-primary">Send Message</button>
        </div>
        
    </div>
    <div class="col-8 row">
        <div class="col-1"></div>
        <div class="col-10 scrollable-div">
            <ul id="messagesList"></ul>
        </div>
        <div class="col-1"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
    <script src="~/js/chatHub.js" asp-append-version="true"></script>
}
